<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/album_width"
    android:layout_height="@dimen/album_height"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/widgetsColor"
    android:paddingTop="6dp"
    android:paddingBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeColor="?attr/colorControlHighlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/widgetsColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/widgetsColor"
            android:contentDescription="@string/covers_pref_title"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/album"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.50"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/total_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
